<h1 id="page_title">Diga Ol√°!</h1>
		
<div class="skinny_wrapper wrapper_padding">
	<%= form_for @contact do |f| %>
		<%= f.label :nome %><br>
		<%= f.text_field :name, required: true %>
		
		<br>
		
		<%= f.label :email %><br>
		<%= f.email_field :email, required: true %>
		
		<br>
		
		<%= f.label :mensagem %><br>
		<%= f.text_area :message, as: :text %>
		
		<div class="hidden">
			<%= f.label :nickname %><br>
			<%= f.text_field :nickname, hint: 'deixe este campo em branco' %>
		</div>
		
		<%= f.submit 'Enviar Mensagem', class: "button" %>		
	<% end %>	
</div>
